<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>cn.gok.secondMarket.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>cn.gok.secondMarket.listener.UserOnlineCountListener</listener-class>
    </listener>
    <listener>
        <listener-class>cn.gok.secondMarket.listener.UserLoginListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>cn.gok.secondMarket.servlet.IndexServlet</welcome-file>
    </welcome-file-list>
</web-app>